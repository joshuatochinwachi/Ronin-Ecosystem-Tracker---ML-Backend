# Server Configuration
PORT=8000
DEBUG=False
ENVIRONMENT=production

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000","https://your-frontend.vercel.app"]

# Ronin API Configuration
# Production Ronin API Base URL
RONIN_API_BASE_URL=https://web-production-4fae.up.railway.app

# Caching
CACHE_TTL_SECONDS=300
CACHE_DIR=raw_data_cache
ENABLE_CACHE=True

# ML Models
ML_MODELS_DIR=ml_models
MODEL_RETRAIN_HOURS=24

# Feature Flags
ENABLE_VOLUME_FORECAST=True
ENABLE_WHALE_ANALYSIS=True
ENABLE_CHURN_PREDICTION=True
ENABLE_ANOMALY_DETECTION=True

# API Configuration
HTTP_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60